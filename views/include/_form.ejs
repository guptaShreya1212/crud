<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        
         <div class="form-group">
             <label for="name" class="text-light">Name </label>
             <input type="text" name="name" value="" placeholder="Name" required/>
         </div>
         <div class="form-group">
             <label for="email" class="text-light">Email </label>
             <input type="text" name="email" value="" placeholder="user@gmail.com" required/>
         </div>
         
         <div class="form-group">
             <label for="gender" class="text-light">Gender</label>
             <div class="radio inline">
                 <input type="radio" name="gender" value="Male" required />
                 <label for="gender" class="text-light" >Male</label>
             </div>
             <div class="radio inline">
                 <input type="radio" name="gender" value="Female" required/>
                 <label for="gender" class="text-light" >Female</label>
             </div> 
         </div>
         <div class="form-group">
             <label for="dob" class="text-light">DOB</label>
             <input type="date" name="dob" class="date" required/>
         </div>
         <div class="form-group">
             <label for="age" class="text-light">Age</label>
             <input type="number" name="age" class="age" min="1" max="70" required/>
         </div> 
         <div class="form-group">
             <label for="phone" class="text-light">Contact</label> 
             <input type="tel" name="contact" id="phone" maxlength="10" minlength="10" required/>
             <small id="phoneError"></small>
         </div> 
         <div class="form-group">
             <label for="course" class="text-light">Course</label> 
             <input type="text" name="qualification" id="course" placeholder="btech" required/>
             <small id="phoneError"></small>
         </div> 
         <div class="form-group">
             <button type="submit" class="btn text-dark update">Submit</button>
         </div>
    </div>
   </form>