<!-- include header -->

<%-include('include/_header') %>
<!-- /include header -->
<!-- main site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All Users</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to update an account</span>
        </div>
        <!-- update user form -->
        <form action="/api/users/<%= user._id%>?_method=PUT" method="POST" id="update_user">
            <input type="hidden" name="_method" value="PUT">
            <div class="new_user">
                 <div class="form-group">
                     <label for="name" class="text-light">Name </label>
                     <input type="text" name="name" value="<%= user.name %>" placeholder="Name" required/>
                 </div>
                 <div class="form-group">
                     <label for="email" class="text-light">Email </label>
                     <input type="text" name="email" value="<%= user.email %>" placeholder="user@gmail.com" required/>
                 </div>
                 
                 <div class="form-group">
                     <label for="gender" class="text-light">Gender</label>
                     <div class="radio inline">
                         <input type="radio" name="gender" value="Male"  <%= user.gender === 'Male' ? 'checked' :' ' %> required />
                         <label for="gender" class="text-light" >Male</label>
                     </div>
                     <div class="radio inline">
                         <input type="radio" name="gender" value="Female" <%= user.gender === 'Female' ? 'checked' :' ' %> required/>
                         <label for="gender" class="text-light" >Female</label>
                     </div> 
                 </div>
                 <div class="form-group">
                     <label for="dob" class="text-light">DOB</label>
                     <input type="date" name="dob" class="date" value="<%= user.dob.split('T')[0] %>" required/>
                 </div>
                 <div class="form-group">
                     <label for="age" class="text-light">Age</label>
                     <input type="number" name="age" class="age" min="1" max="70" value="<%= user.age %>" required/>
                 </div> 
                 <div class="form-group">
                     <label for="phone" class="text-light">Contact</label> 
                     <input type="tel" name="contact" id="phone" maxlength="10" minlength="10" value="<%= user.contact %>" required/>
                     <small id="phoneError"></small>
                 </div> 
                 <div class="form-group">
                     <label for="course" class="text-light">Course</label> 
                     <input type="text" name="qualification" id="course" placeholder="btech" value="<%= user.qualification %>"  required/>
                     <small id="phoneError"></small>
                 </div> 
                 <div class="form-group">
                     <button type="submit" class="btn text-dark update">Submit</button>
                 </div>
            </div>
           </form>
        
    </div>
</main>
<!-- /Main Site -->
  <!-- include footer -->

  <%-include('include/_footer') %>
  <!-- /include footer -->